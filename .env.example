# Application Configuration
SECRET_KEY=your-secret-key-change-in-production
FLASK_ENV=development
FLASK_DEBUG=True

# Database Configuration (MariaDB)
DATABASE_URL=mysql+pymysql://root:password@localhost:3306/versatiles_print
# Alternative format: mysql+pymysql://user:password@host:port/database

# SMTP Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@versatiles.com

# Agent Workload Configuration
MAX_ACTIVE_ORDERS_DEFAULT=10
MAX_ACTIVE_ORDERS_OVERRIDE=30

# Validation Configuration
PHONE_VALIDATION_PATTERN=^\+?[1-9]\d{1,14}$
CSV_IDEMPOTENCY_MODE=reject

# Quota Configuration
QUOTA_WARNING_THRESHOLD=0.8
DEFAULT_BW_LIMIT=3000
DEFAULT_COLOR_LIMIT=2000
MIN_TOPUP_AMOUNT=1000

# File Upload Configuration
UPLOAD_FOLDER=uploads/csv
MAX_CONTENT_LENGTH=16777216
ALLOWED_EXTENSIONS=csv

# Session Configuration
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax
PERMANENT_SESSION_LIFETIME=3600

# Timezone
TIMEZONE=UTC

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
